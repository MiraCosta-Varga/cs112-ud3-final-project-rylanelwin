<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs112.ud3.controllers.GamesController">
   <bottom>
      <HBox prefHeight="350.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" prefHeight="300.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Label fx:id="gamesSlotsLabel" alignment="CENTER" prefHeight="75.0" prefWidth="100.0" text="Slots" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="gamesSlotsImageView" fitHeight="250.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" scaleX="1.6" scaleY="1.6" />
                  <Button fx:id="gamesSlotsPlayButton" mnemonicParsing="false" onAction="#onGamesSlotsPlayButtonClick" text="Play">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="300.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Label fx:id="gamesRpsLabel" alignment="CENTER" prefHeight="75.0" prefWidth="200.0" text="Rock Paper Scissors" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="gamesRpsImageView" fitHeight="250.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" scaleX="1.6" scaleY="1.6" />
                  <Button fx:id="gamesRpsPlayButton" mnemonicParsing="false" onAction="#onGamesRpsPlayButtonClick" text="Play">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="300.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Label fx:id="gamesBlackjackLabel" alignment="CENTER" prefHeight="100.0" prefWidth="200.0" text="Blackjack&#10;(Out Of Order)&#10;" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Label>
                  <ImageView fx:id="gamesBlackjackImageView" fitHeight="250.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" scaleX="1.8" scaleY="1.7">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></ImageView>
                  <Button fx:id="gamesBlackjackPlayButton" mnemonicParsing="false" onAction="#onGamesBlackjackPlayButtonClick" text="Play">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
   <top>
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" spacing="150.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="gamesExitButton" alignment="CENTER" mnemonicParsing="false" onAction="#onGamesExitButtonClick" text="Exit" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Label fx:id="gamesMoneyLabel" alignment="CENTER" prefHeight="50.0" prefWidth="300.0" text="Money" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
</BorderPane>
